// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String     @default("SUPER_ADMIN") // Changed from Enum to String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Restaurant {
  id          String   @id @default(uuid())
  name        String
  phone       String   @unique // Login uchun
  password    String   // Hashed password
  address     String?
  machineId   String?  @unique // Biriktirilgan kompyuter IDsi
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  licenses    License[]
  syncLogs    SyncLog[]
  sales       Sale[]
  shifts      Shift[]
  cancelledOrders CancelledOrder[]

  @@map("restaurants")
}

model License {
  id           String        @id @default(uuid())
  restaurantId String
  restaurant   Restaurant    @relation(fields: [restaurantId], references: [id])
  
  startDate    DateTime
  endDate      DateTime
  status       String        @default("ACTIVE") // Changed from Enum to String
  price        Decimal?
  
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("licenses")
}

model SyncLog {
  id           String     @id @default(uuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  
  dataType     String     // order, product, etc.
  dataId       String     // Original record ID
  action       String     // CREATE, UPDATE, DELETE
  payload      String     // Changed from Json to String
  
  syncedAt     DateTime   @default(now())
  
  @@map("sync_logs")
}

model Config {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String?
  updatedAt DateTime @updatedAt

  @@map("config")
}

// Mirror tables for POS sync (restaurant-admin reports)
model Sale {
  id            String   @id
  restaurantId  String
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  check_number  Int?
  date          DateTime
  total_amount  Float    @default(0)
  subtotal      Float?
  discount      Float?
  payment_method String?
  customer_id   String?
  waiter_name   String?
  guest_count   Int?
  items_json    String?  // JSON string
  shift_id      String?
  table_name    String?

  @@map("sales")
}

model Shift {
  id             String   @id
  restaurantId   String
  restaurant     Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  shift_number   Int?
  cashier_id     String?
  cashier_name   String?
  start_time     DateTime
  end_time       DateTime?
  total_cash     Float    @default(0)
  total_card     Float    @default(0)
  total_transfer Float    @default(0)
  total_debt     Float    @default(0)
  total_sales    Float    @default(0)

  @@map("shifts")
}

model CancelledOrder {
  id            String   @id
  restaurantId  String
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  table_id      String?
  date          DateTime
  total_amount  Float    @default(0)
  waiter_name   String?
  items_json    String?
  reason        String?

  @@map("cancelled_orders")
}
