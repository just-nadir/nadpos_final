{
  "name": "pos-desktop",
  "private": true,
  "version": "2.2.3",
  "main": "electron/main.cjs",
  "description": "NadPOS Restoran POS tizimi",
  "author": "Ares Boston Tech LLC",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron . --no-sandbox",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\" \"npm run dev --prefix ../waiter-pwa\"",
    "install:deps": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:dir": "npm run build && electron-builder --win --dir --x64",
    "build:waiter": "npm run build --workspace=apps/waiter-pwa && node scripts/copy-waiter.cjs",
    "dist:with-waiter": "npm run build:waiter && npm run dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@remix-run/router": "^1.23.1",
    "7zip-bin": "^5.2.0",
    "axios": "^1.13.4",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.19",
    "dotenv": "^16.6.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1",
    "form-data": "^4.0.5",
    "framer-motion": "^12.23.26",
    "ip": "^2.0.1",
    "jsonwebtoken": "^9.0.3",
    "ldrs": "^1.1.9",
    "lucide-react": "^0.555.0",
    "node-cron": "^4.2.1",
    "node-machine-id": "^1.1.12",
    "node-thermal-printer": "^4.5.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "react-is": "^19.2.3",
    "react-qr-code": "^2.0.18",
    "react-router-dom": "^6.30.2",
    "recharts": "^3.5.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@electron/rebuild": "^3.6.0",
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "29.4.6",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.5",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "nadpos.uz",
    "productName": "NadPOS Restoran",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "mobile-dist/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true,
      "artifactName": "NadPOS-Restoran-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "just-nadir",
      "repo": "NadPOS-V2.0.0"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/just-nadir/NadPOS-V2.0.0.git"
  }
}
